<Window x:Class="EmployeeDocumentManagementApp.PersonalFiles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeDocumentManagementApp"
        mc:Ignorable="d"
        Title="PersonalFiles" Height="750" Width="800">
    <Grid>
        <ListView x:Name="lvEmployees">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding EmployeeName}" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding EmployeeDocuments}" FontWeight="Bold" Margin="0,0,0,5"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>

