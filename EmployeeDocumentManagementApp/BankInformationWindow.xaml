<Window x:Class="EmployeeDocumentManagementApp.BankInformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заплата" Height="450" Width="660">
    <Grid>
        <TabControl>
            <TabItem Header="2024">
                <ListView ItemsSource="{Binding SalaryHistory}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Банков профил" DisplayMemberBinding="{Binding January}" Width="Auto"/>
                            <GridViewColumn Header="Януари" DisplayMemberBinding="{Binding January}" Width="Auto"/>
                            
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
